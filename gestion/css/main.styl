@import 'fonts.styl'

#productos
	margin 0
	padding 0
	list-style none
	
	.item
		margin 0
		padding 0
		display block		
		position relative
		
		.cabeza
			margin 0
			padding 0.3em
			position absolute
			top 5px
			left 5px
			
			span, h2
				margin 0
				padding 0
				display inline-block
				vertical-align bottom
				color white
			
			span
				font-size 20px
				
			h2 
				font-size 17px
				padding 0.15em 0.5em 0 0.5em
				font-weight 400
		
		figure
			margin 0
			padding 0
			width 100%
			
			img
				margin 0
				padding 0
				width 100%
		
		.opciones
			margin 0
			padding 0
			list-style none
			position absolute
			right 5px
			bottom 15px
			
			li 
				margin 0
				padding 0
				display inline-block
				vertical-align middle
				
				a 
					text-decoration none
					margin 0
					padding 0 0.2em
					font-size 30px
					color white

body 
	padding 0 
	margin 0
	
	#cabecera
		margin 0
		padding 1em 0
		border-bottom 1px solid rgba(0,0,0,0.1)
		-webkit-box-shadow: -1px 6px 10px -5px rgba(0,0,0,0.5);
		-moz-box-shadow: -1px 6px 10px -5px rgba(0,0,0,0.5);
		box-shadow: -1px 6px 10px -5px rgba(0,0,0,0.5);
		
		#logo
			margin 0 
			padding 0
			
			figure
				margin 0 auto
				padding 0
				width 125px
				
				img
					margin 0
					padding 0
					width 100%
		
		#menu
			display none
	
		#opciones
			margin 0
			padding 0.6em 1.3em 0 1.3em
			text-align center
			
			#redes, #link_menu
				display inline-block
				vertical-align middle
				
			#redes
				margin 0
				padding 0
				list-style none
				
				li 
					margin 0
					padding 0 0.3em
					display inline-block
					vertical-align middle
					
					a 
						margin 0
						padding 0
						font-size 30px
						text-decoration none
						color #666
			
			#link_menu
				float right
				margin 0
				padding 0
				font-size 30px
				text-decoration none
				color #666
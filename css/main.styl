@import "icomoon.styl"
@import "fonts.styl"

#cargando
	margin 0
	padding 0
	position fixed
	top 0
	left 0
	bottom 0
	right 0
	background white
	z-index 1000
	
	figure
		margin 0
		padding 0
		width 250px
		
		img
			margin 0
			padding 0
			width 100%
	
	p 
		font-family 'regular'
		font-size 30px

body
	padding 0
	margin 0
	
	#cabecera
		margin 0
		padding 1em 0
		border-bottom 1px solid rgba(0,0,0,0.1)
		-webkit-box-shadow: -1px 6px 10px -5px rgba(0,0,0,0.5);
		-moz-box-shadow: -1px 6px 10px -5px rgba(0,0,0,0.5);
		box-shadow: -1px 6px 10px -5px rgba(0,0,0,0.5);
		
		#logo
			margin 0 
			padding 0
			
			figure
				margin 0 auto
				padding 0
				width 125px
				
				img
					margin 0
					padding 0
					width 100%
	
	#opciones
		margin 0
		padding 0.6em 1.3em 0 1.3em
		
		#redes, #link_menu
			display inline-block
			vertical-align middle
			
		#redes
			margin 0
			padding 0
			list-style none
			
			li 
				margin 0
				padding 0 0.3em
				display inline-block
				vertical-align middle
				
				a 
					margin 0
					padding 0
					font-size 30px
					text-decoration none
					color #666
		
		#link_menu
			float right
			margin 0
			padding 0
			font-size 30px
			text-decoration none
			color #666
